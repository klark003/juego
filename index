<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/phaser@3.15.1/dist/phaser-arcade-physics.min.js"></script>
</head>
<body>

    <script>
    var config = {
        type: Phaser.AUTO,
        width: 800,
        height: 600,
        physics: {
            default: 'arcade',
            arcade: {
                gravity: { y: 200 }
            }
        },
        scene: {
            preload: preload,
            create: create
        }
    };

    var game = new Phaser.Game(config);
    var playing = false;

    function preload ()
    {
        this.load.setBaseURL('http://localhost/jumpking_Phaser/');
        // Loading imagenes
        this.load.image('sky', 'assets/img/space3.png');
        this.load.image('logo', 'assets/img/phaser3-logo.png');
        this.load.image('red', 'assets/img/red.png');

        // Loading sound
        this.load.audio('music', 'assets/music/backgroundmusic.mp3');

    }

    function create ()
    {
        if(!playing && !this.load.isLoading()){
            playing = true
            var music = this.sound.add('music')
            music.loop = true; 
            music.play();
        }
        
        this.add.image(400, 300, 'sky');

        var particles = this.add.particles('red');

        var emitter = particles.createEmitter({
            speed: 100,
            scale: { start: 1, end: 0 },
            blendMode: 'ADD'
        });

        var logo = this.physics.add.image(400, 100, 'logo');

        logo.setVelocity(100, 200);
        logo.setBounce(1, 1);
        logo.setCollideWorldBounds(true);

        emitter.startFollow(logo);
    }
    </script>

</body>
</html>